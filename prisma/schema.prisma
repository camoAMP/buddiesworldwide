generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String    @unique
  emailVerified      DateTime?
  image              String?
  role               String    @default("user")
  stripeCustomerId   String?   @unique
  subscriptionStatus String    @default("free")
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  accounts            Account[]
  sessions            Session[]
  bioPages            BioPage[]
  integrationAccounts IntegrationAccount[]
  actions             Action[]
  triggers            Trigger[]
  eventLogs           EventLog[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model BioPage {
  id          String    @id @default(cuid())
  userId      String
  slug        String    @unique
  title       String
  theme       String    @default("{}")
  publishedAt DateTime?
  ogImageUrl  String?
  domain      String?
  settings    String    @default("{}")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  blocks       Block[]
  triggers     Trigger[]
  analyticsHits AnalyticsHit[]
}

model Block {
  id       String  @id @default(cuid())
  pageId   String
  type     String
  order    Int
  config   String  @default("{}")
  variant  String? // 'A' | 'B' | null
  enabled  Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  page         BioPage        @relation(fields: [pageId], references: [id], onDelete: Cascade)
  triggers     Trigger[]
  analyticsHits AnalyticsHit[]

  @@index([pageId, order])
}

model IntegrationAccount {
  id       String @id @default(cuid())
  userId   String
  provider String
  authType String
  access   String @default("{}")
  status   String @default("connected")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
}

model Action {
  id        String    @id @default(cuid())
  userId    String
  provider  String
  actionKey String
  name      String
  config    String    @default("{}")
  lastRunAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Trigger {
  id           String    @id @default(cuid())
  userId       String
  pageId       String?
  blockId      String?
  type         String
  scheduleCron String?
  secret       String?
  targets      String    @default("[]")
  enabled      Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  page    BioPage? @relation(fields: [pageId], references: [id], onDelete: Cascade)
  block   Block?   @relation(fields: [blockId], references: [id], onDelete: Cascade)
}

model EventLog {
  id        String   @id @default(cuid())
  userId    String
  type      String
  payload   String   @default("{}")
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model AnalyticsHit {
  id         String   @id @default(cuid())
  pageId     String
  blockId    String?
  type       String   // 'view' | 'click'
  ts         DateTime @default(now())
  userAgent  String?
  ipHash     String?  // renamed from ip to ipHash for privacy
  referrer   String?
  utm        String   @default("{}")
  device     String?
  country    String?

  page  BioPage @relation(fields: [pageId], references: [id], onDelete: Cascade)
  block Block?  @relation(fields: [blockId], references: [id], onDelete: Cascade)

  @@index([pageId, ts])
  @@index([blockId, ts])
}

model ErrorLog {
  id        String   @id @default(cuid())
  ts        DateTime @default(now())
  requestId String?
  userId    String?
  route     String
  method    String
  status    Int
  code      String?
  message   String
  stack     String?
  context   String   @default("{}")
  ipHash    String?

  @@index([ts])
  @@index([requestId])
  @@index([userId])
}

model AuditLog {
  id        String   @id @default(cuid())
  ts        DateTime @default(now())
  userId    String?
  actorType String   // user|system|webhook
  action    String   // CREATED_RULE, UPDATED_PAGE, SIGNIN, etc.
  target    String?  // entity id or path
  meta      String   @default("{}")
  ipHash    String?

  @@index([ts])
  @@index([userId])
  @@index([action])
}
